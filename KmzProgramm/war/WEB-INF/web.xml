<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<servlet>
		<servlet-name>mvc-dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>mvc-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>


	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/mvc-dispatcher-servlet.xml, /WEB-INF/spring-security.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Servlets -->
	<servlet>
		<servlet-name>projectsChart</servlet-name>
		<servlet-class>ru.kmz.web.projectschart.server.ProjectsChartServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>templateCommon</servlet-name>
		<servlet-class>ru.kmz.web.templatecommon.server.TemplateCommonServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>resourcesModule</servlet-name>
		<servlet-class>ru.kmz.web.resources.server.ResourcesModuleServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>projectsModule</servlet-name>
		<servlet-class>ru.kmz.web.projects.server.ProjectsModuleServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>projectsCommon</servlet-name>
		<servlet-class>ru.kmz.web.projectscommon.server.ProjectsCommonServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>calendarModule</servlet-name>
		<servlet-class>ru.kmz.web.calendar.server.CalendarModuleServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>administrationModule</servlet-name>
		<servlet-class>ru.kmz.web.administration.server.AdministrationModuleServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>commonModule</servlet-name>
		<servlet-class>ru.kmz.web.common.server.CommonServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>commonModule</servlet-name>
		<url-pattern>/kmzprogramm/commonModule</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>administrationModule</servlet-name>
		<url-pattern>/kmzprogramm/administrationModule</url-pattern>
		<url-pattern>/administrationmodule/administrationModule</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>projectsModule</servlet-name>
		<url-pattern>/kmzprogramm/projectsModule</url-pattern>
		<url-pattern>/projectsmodule/projectsModule</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>templateCommon</servlet-name>
		<url-pattern>/templatemodule/templateCommon</url-pattern>
		<url-pattern>/kmzprogramm/templateCommon</url-pattern>
		<url-pattern>/projectsmodule/templateCommon</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>resourcesModule</servlet-name>
		<url-pattern>/resourcesmodule/resourcesModule</url-pattern>
		<url-pattern>/kmzprogramm/resourcesModule</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>projectsCommon</servlet-name>
		<url-pattern>/purchasesmodule/purchasesModule</url-pattern>
		<url-pattern>/kmzprogramm/projectsCommon</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>calendarModule</servlet-name>
		<url-pattern>/calendarmodule/calendarModule</url-pattern>
		<url-pattern>/kmzprogramm/calendarModule</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>projectsChart</servlet-name>
		<url-pattern>/projectschartmodules/projectsChart</url-pattern>
		<url-pattern>/kmzprogramm/projectsChart</url-pattern>
	</servlet-mapping>



	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>KmzProgramm.html</welcome-file>
	</welcome-file-list>

</web-app>
