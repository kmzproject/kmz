<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>ru.kmz.web.main.server.GreetingServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>templateCommon</servlet-name>
		<servlet-class>ru.kmz.web.templatecommon.server.TemplateCommonServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>orderCommon</servlet-name>
		<servlet-class>ru.kmz.web.ordercommon.server.OrderCommonServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>templateModule</servlet-name>
		<servlet-class>ru.kmz.web.template.server.TemplateModuleServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>calculatorModule</servlet-name>
		<servlet-class>ru.kmz.web.calculator.server.CalculatorModuleServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>resourcesModule</servlet-name>
		<servlet-class>ru.kmz.web.resources.server.ResourcesModuleServiceImpl</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/kmzprogramm/greet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>templateCommon</servlet-name>
		<url-pattern>/templatemodule/templateCommon</url-pattern>
		<url-pattern>/kmzprogramm/templateCommon</url-pattern>
		<url-pattern>/calculatormodule/templateCommon</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>orderCommon</servlet-name>
		<url-pattern>/kmzprogramm/orderCommon</url-pattern>
		<url-pattern>/calculatormodule/orderCommon</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>templateModule</servlet-name>
		<url-pattern>/templatemodule/templateModule</url-pattern>
		<url-pattern>/kmzprogramm/templateModule</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>calculatorModule</servlet-name>
		<url-pattern>/calculatormodule/calculatorModule</url-pattern>
		<url-pattern>/kmzprogramm/calculatorModule</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>resourcesModule</servlet-name>
		<url-pattern>/resourcesmodule/resourcesModule</url-pattern>
		<url-pattern>/kmzprogramm/resourcesModule</url-pattern>
	</servlet-mapping>


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>KmzProgramm.html</welcome-file>
	</welcome-file-list>

</web-app>
